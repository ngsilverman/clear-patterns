{
  "manifest_version": 2,
  "name": "Clear Patterns",
  "version": "1.0",
  "description": "Modifies the interface of popular websites to be more compassionate towards users.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "css": [
        "netflix/netflix.css"
      ],
      "js": [
        "thirdparty/jquery-3.3.1.min.js",
        "thirdparty/jquery.initialize.min.js",
        "netflix/netflix.js"
      ]
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "css": [
        "reddit/reddit.css"
      ],
      "js": [
        "thirdparty/jquery-3.3.1.min.js",
        "thirdparty/jquery.initialize.min.js",
        "reddit/reddit.js"
      ]
    }
  ]
}
